<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/title_add_catatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="Form Tambah Catatan"
        app:titleTextColor="@color/mdtp_white" />

    <TextView
        android:id="@+id/typecatatan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/btn_dropdown"
        android:gravity="left|center"
        android:text="Pilih Tipe Catatan"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/addbulan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Pilih Tanggal"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBox_default_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:text="Tanggal Hari Ini" />

    </LinearLayout>

    <EditText
        android:id="@+id/addketerangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addbulan"
        android:layout_marginTop="11dp"
        android:layout_weight="1"
        android:gravity="top|left"
        android:ems="10"
        android:hint="add keterangan"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addtotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Total"
        android:inputType="number" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/addbuttoncatatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:height="40dp"
        android:textColor="@color/mdtp_white"
        android:background="@color/colorPrimary"
        android:text="Add" />

    <Button
        android:id="@+id/bataladd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:height="40dp"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:text="Batal" />

</LinearLayout>